@model EditUserRoleViewModel

@{
    ViewData["Title"] = "EditUserRole";
}

<h1>EditUserRole</h1>

 
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUserRole" asp-controller="Accounts">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SelectedRole" class="control-label"></label>
                <select asp-for="SelectedRole" class="form-control" asp-items="Model.RolesList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Change" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
